@using Microsoft.AspNetCore.Components.Authorization
<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Fileshare Web</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <div class="nav-item px-3">
        <AuthorizeView>
            <Authorized>
                <div class="nav-link">
                    <span class="bi bi-person-fill" aria-hidden="true"></span> @context.User.Identity?.Name
                </div>
            </Authorized>
        </AuthorizeView>
    </div>
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="filelist">
                <span class="oi oi-plus" aria-hidden="true"></span> File List
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="access-management">
                AccessManagement
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <AuthorizeView>
                <Authorized>
                    <form action="Logout" method="post">
                        <AntiforgeryToken/>
                        <button type="submit" class="nav-link">
                            <span class="bi bi-box-arrow-left" aria-hidden="true"></span> Logout
                        </button>
                    </form>
                </Authorized>
            </AuthorizeView>
        </div>
    </nav>
</div>
